{
    "name": "nostriphant/nostripub",
    "description": "Thin ActivityPub and nostr bridge",
    "type": "project",
    "require": {
        "php": "^8.4",
        "vlucas/phpdotenv": "^5.6",
        "nostriphant/client": "^0.3",
        "landrok/activitypub": "^0.8.1",
        "nostriphant/nip-19": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "nostriphant\\nostripub\\": "src/",
            "nostriphant\\nostripubTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Rik Meijer",
            "email": "nostriphant@rikmeijer.nl"
        }
    ],
    "require-dev": {
        "ext-curl": "*",
        "pestphp/pest": "^4.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "next": [
            "git tag -f `cat VERSION` @no_additional_args",
            "echo @additional_args > VERSION",
            "git commit -am 'start VERSION @additional_args'"
        ]
    }
}
